<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RealtiveLayout">

  <View
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white"
      />
  <TextView
      android:id="@+id/edSignUp1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Sign Up"
      android:textSize="25sp"
      android:textStyle="bold"
      android:gravity="center_horizontal"
      android:layout_marginTop="15sp"
      />
  <TextView
      android:id="@+id/edCreateAccount"
      android:layout_below="@id/edSignUp1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Create Account"
      android:textSize="25sp"
      android:textStyle="bold"
      android:gravity="center_horizontal"
      android:layout_marginTop="40sp"
      />
  <TextView
      android:id="@+id/edText1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Sign Up to create a new acount"
      android:layout_below="@id/edCreateAccount"
      android:textSize="15sp"
      android:gravity="center_horizontal"
      android:layout_marginTop="10sp"
      />
  <EditText
      android:id="@+id/edText2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Enter your name"
      android:layout_below="@id/edText1"
      android:layout_marginTop="10sp"
      android:layout_marginStart="20sp"
      android:layout_marginEnd="20sp"
      />
  <EditText
      android:id="@+id/edText3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Enter your email"
      android:layout_below="@id/edText2"
      android:layout_marginTop="10sp"
      android:layout_marginStart="20sp"
      android:layout_marginEnd="20sp"
      />
  <EditText
      android:id="@+id/edText4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Enter your password"
      android:layout_below="@id/edText3"
      android:layout_marginTop="10sp"
      android:layout_marginStart="20sp"
      android:layout_marginEnd="20sp"
      />
  <TextView
      android:id="@+id/edForgot"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Forgot password?"
      android:layout_below="@id/edText4"
      android:textColor="@color/blue"
      android:gravity="end"
      android:layout_marginEnd="20sp"
      />
  <Button
      android:id="@+id/edButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/edForgot"
      android:text="Sign Up"
      android:layout_margin="20sp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center"
      android:layout_below="@id/edButton"
    >
    <TextView
        android:id="@+id/edText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:gravity="center"/>
    <TextView
        android:id="@+id/edText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="@color/blue"
        android:layout_below="@id/edButton"/>
  </LinearLayout>
  </RelativeLayout>