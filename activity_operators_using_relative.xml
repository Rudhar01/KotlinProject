<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OperatorsUsingRelative"
    android:gravity="center">

    <Button
        android:id="@+id/edPlus"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:text="+"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_above="@id/edFour"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="150sp"
        android:layout_marginEnd="150sp"
        />
    <TextView
        android:id="@+id/edFour"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:gravity="center"
        android:text="4"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/edMultiply"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:gravity="center"
        android:text="*"
        android:layout_toStartOf="@id/edFour"
        android:layout_marginEnd="-150sp"
        android:textSize="30sp"
        android:layout_marginStart="50sp"
        />
    <Button
        android:id="@+id/edMinus"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:gravity="center"
        android:text="-"
        android:layout_below="@id/edFour"
        android:textSize="30sp"
        android:layout_marginEnd="150sp"
        android:layout_marginStart="160sp"
        />
    <Button
        android:id="@+id/edDivide"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:gravity="center"
        android:text="/"
        android:layout_toEndOf="@id/edFour"
        android:layout_marginStart="-150sp"
        android:layout_marginEnd="50sp"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/edResult"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:text="Result"
        android:layout_below="@id/edMinus"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        />
</RelativeLayout>
